<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>ID</dt>
      <dd><%= @user.id %></dd>

      <dt>EMAIL</dt>
      <dd><%= @user.email %></dd>

      <dt>USER NAME</dt>
      <dd><%= @user.username %></dd>

    </dl>    
  </div>
</div>


<table class="table table-striped table-hover">
  <tr>
    <th>PHOTOS</th>
  </tr>

  <% Photo.all.each do |photo| %>
  <tr>
    <% if photo.user_id == current_user.id %>
    <td><img src = "<%= photo.image %>"></td>
    <% end %>
  </tr>
  <% end %>
</table>
